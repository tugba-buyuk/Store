@model ProductDto

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-check form-switch">
        <input asp-for="ShowCase" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Showcase</label>
    </div>

    <div class="form-group my-3">
        <label for="Sizes">Sizes</label>
        <select class="form-control" id="Sizes" name="Sizes" multiple>
            <option value="S">Small</option>
            <option value="M">Medium</option>
            <option value="L">Large</option>
            <option value="XL">Extra Large</option>
            <option value="XXL">Extra Extra Large</option>
        </select>
    </div>

    <div class="form-group my-3">
        <label for="Gender">Gender</label>
        <select class="form-control" id="Gender" name="Gender">
            <option value="">Select Gender</option>
            <option value="Women">Women</option>
            <option value="Men">Men</option>
            <option value="Unisex">Unisex</option>
        </select>
    </div>

    <div class="form-group my-3">
        <label for="ColorNames">Colors</label>
        <select class="form-control" id="ColorNames" name="ColorNames" multiple>
            @foreach (var color in ViewBag.Colors)
            {
                <option value="@color.Text">@color.Text</option>
            }
        </select>
    </div>

    <div class="form-group my-3">
        <label for="Files">Images</label>
        <input name="files" type="file" class="form-control" multiple />
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Save
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>
</form>
