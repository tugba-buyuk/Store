@model IEnumerable<Category>

<div class="text-center my-5 border-bottom">
    <div class="display-6">Categories</div>
</div>

<div class="text-center">
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create
        </a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category Name</th>

                </tr>
            </thead>
            <tbody>
                @foreach (Category cat in Model)
                {
                    <tr>
                        <td>@cat.Id</td>
                        <td>@cat.CategoryName</td>
                        <td>
                            <div class="btn-group">
                                <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-warning"
                                   asp-action="Update" asp-route-id="@cat.Id">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger"
                                   asp-action="Delete" asp-route-id="@cat.Id">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>