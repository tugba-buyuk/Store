@using StoreApp.Infrastructure.Extensions
@model Product

<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h6 class="display-6">
                @Model.ProductName
            </h6>

            @* <img class="img-fluid shadow rounded-3 my-3" src="@Model?.ImageUrl" alt="@Model.ProductName" /> *@

            <p class="lead text-danger">@Model.Price.ToString("c")</p>
        </div>
    </div>
</div>


<div class="btn-group text-center">
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
        <i class="fa-solid fa-house"></i>
        Home
    </a>
    <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">
        <i class="fa-solid fa-list"></i>
        Products
    </a>
    <form id="@Model.Id" asp-page="/cart" method="post">
        <input type="hidden" asp-for="Id" name="productId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn btn-outline-primary">
            <i class="fa fa-cart-plus"></i>
        </button>
    </form>
</div>