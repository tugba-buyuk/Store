@model LoginModel

<div class="text-center my-5">

    <h6 class="display-6">
        <i class="fa-solid text-white fa-right-to-bracket bg-secondary p-3 rounded-5"></i>
        <br />
        Login
    </h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group my-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>

            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-right-to-bracket"></i>
                    Login
                </button>
                <a asp-action="GoogleLogin" class="btn btn-google btn-user btn-block" style="background-color:#EA4335; color:#FFFF">
                    <i class="fab fa-google fa-fw"style="color:#FFF"></i> Login with Google
                </a>
                <a asp-action="FacebookLogin" class="btn btn-google btn-user btn-block" style="background-color:#4267B2; color:#FFFF">
                    <i class="fa-brands fa-facebook-f" style="color:#FFF"></i> Login with Facebook
                </a>
            </div>
        </form>

        <div>
            If you don't have an account. Please click here to achieve <a asp-action="Register"> registration page.</a>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>